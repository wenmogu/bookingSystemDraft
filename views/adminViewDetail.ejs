        <tr>
        <td>Room Number: </td>
        <td><input type="text" name='rid' value='<%= info[0].roomid %>' hidden><%= info[0].roomid %></td>
        </tr>

        <tr>
        <td>Date: </td>
        <td><input type="text" name='d' value='<%= info[0].date %>' hidden><%= info[0].date %>
