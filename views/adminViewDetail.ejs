        <tr>
        <td>Time start: </td>
        <td><input type="text" name='start' value='<%= info[0].start %>' hidden><%= info[0].start %></td>
        </tr>

        <tr>
        <td>Time end: </td>
        <td><input type="text" name='end' value='<%= info[0].end %>' hidden><%= info[0].end %></td>
        </tr>

        

	    </tbody>
		</table>

    	<div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-danger">Delete The Above Record</button>
      </div>
    </div>
     
