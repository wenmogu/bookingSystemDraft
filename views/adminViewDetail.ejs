    <h4>Booking info: </h4>

    <form action='/adminDeleteBookingInfo' method="post" class="form-horizontal">
    <fieldset>

    <table class="table table-striped table-hover ">
		<tbody>
		<tr>
        <td>Group ID: </td>
        <td>><input type="text" name='gid' value='<%= info[0].groupid %>' hidden><%= info[0].groupid %></td>
